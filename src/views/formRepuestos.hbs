<div class='container mt-5'>
	<h2 class='text-center'>CREACIÓN DE REPUESTOS</h2>
	<form action='formRepuestos' method='post' class='m-5'>
		<div class='col-12 d-flex justify-content-center'>
			<div class='col-4'>
				<div class='form-floating mb-3'>
					<input type='text' class='form-control' id='cod' name='codigo' placeholder='Código' autocomplete='off' />
					<label for='cod'>
						Código
					</label>

				</div>
				<div class='form-floating mb-3'>
					<input
						type='text'
						class='form-control'
						id='descr'
						name='descripcion'
						placeholder='Descripción'
						autocomplete='off'
					/>
					<label for='descr'>
						Descripción
					</label>
				</div>
				<div class='form-floating mb-3'>
					<input
						type='text'
						class='form-control'
						id='cost'
						name='costo'
						placeholder='Precio costo'
						autocomplete='off'
					/>
					<label for='cost'>
						Precio costo
					</label>
				</div>
				<div class='d-flex justify-content-center mt-5'>
					<button type='submit' class='btn btn-primary'>
						Guardar
					</button>
					<a href='../admin' class='btn btn-secondary'>Salir</a>
				</div>
			</div>
		</div>
	</form>
</div>